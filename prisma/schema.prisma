datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator prisma_client {
  provider = "prisma-client-js"
}

model User {
  id                 String     @id @default(dbgenerated("nanoid()")) @db.Char(21)
  email              String     @unique
  phone              String     @unique
  cpf                String     @unique
  name               String
  password           String
  email_is_confirmed Boolean    @default(false)
  gender             String?
  description        String?
  born               DateTime?
  role_id            String     @db.Char(21)
  Role               Role       @relation(fields: [role_id], references: [id])
  permission_id      String     @db.Char(21)
  Permission         Permission @relation(fields: [permission_id], references: [id])
  disabled_at        DateTime?
  deleted_at         DateTime?
  created_at         DateTime   @default(now())
  updated_at         DateTime   @updatedAt
  Address            Address[]
}

model Address {
  id           String   @id @default(dbgenerated("nanoid()")) @db.Char(21)
  user_id      String   @db.Char(21)
  User         User     @relation(fields: [user_id], references: [id])
  street       String
  number       String?
  complement   String?
  neighborhood String?
  city         String
  state        String
  zip_code     String
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
  location_id  String   @unique @db.Char(21)
  Location     Location @relation(fields: [location_id], references: [id])
}

model Location {
  id         String   @id @default(dbgenerated("nanoid()")) @db.Char(21)
  latitude   String
  longitude  String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  Address    Address?
}

model Role {
  id          String  @id @default(dbgenerated("nanoid()")) @db.Char(21)
  name        String  @unique
  description String?
  User        User[]
}

model Permission {
  id          String  @id @default(dbgenerated("nanoid()")) @db.Char(21)
  name        String  @unique
  description String?
  User        User[]
}

model File {
  id         String   @id @default(dbgenerated("nanoid()")) @db.Char(21)
  name       String
  path       String
  size       Int
  mime_type  String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
