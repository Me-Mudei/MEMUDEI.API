datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator prisma_client {
  provider = "prisma-client-js"
}

model User {
  id               String      @id @default(dbgenerated("nanoid()")) @db.Char(21)
  email            String      @unique
  phone            String      @unique
  cpf              String      @unique
  name             String
  password         String
  emailIsConfirmed Boolean     @default(false)
  gender           String?
  description      String?
  born             DateTime?
  roleId           String      @db.Char(21)
  Role             Role        @relation(fields: [roleId], references: [id])
  disabledAt       DateTime?
  deletedAt        DateTime?
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  Address          Address?
  Permission       Permission? @relation(fields: [permissionId], references: [id])
  permissionId     String?     @db.Char(21)
}

model Address {
  id           String   @id @default(dbgenerated("nanoid()")) @db.Char(21)
  userId       String   @db.Char(21)@unique
  User         User     @relation(fields: [userId], references: [id])
  street       String
  number       String?
  complement   String?
  neighborhood String?
  city         String
  state        String
  zipCode      String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  locationId   String   @unique @db.Char(21)
  Location     Location @relation(fields: [locationId], references: [id])
}

model Location {
  id        String   @id @default(dbgenerated("nanoid()")) @db.Char(21)
  latitude  String
  longitude String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Address   Address?
}

model Role {
  id          String  @id @default(dbgenerated("nanoid()")) @db.Char(21)
  name        String  @unique
  description String?
  User        User[]
}

model Permission {
  id          String  @id @default(dbgenerated("nanoid()")) @db.Char(21)
  name        String  @unique
  description String?
  User        User[]
}

model File {
  id        String   @id @default(dbgenerated("nanoid()")) @db.Char(21)
  name      String
  path      String
  size      Int
  mimeType  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
