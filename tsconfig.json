{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": ".build",
    "paths": {
      "#shared/*": ["./shared/*"],
      "#user/*": ["./user/*"],
      "#property/*": ["./property/*"],
      "#apollo/*": ["./apollo/*"],
      "#adm/*": ["./adm/*"],
      "#auth/*": ["./auth/*"]
    },
    "typeRoots": ["./apollo/generated", "./node_modules/@types"]
  },
  "include": ["./src"]
}
