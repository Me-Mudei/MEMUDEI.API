{
  "name": "@me-mudei/apollo",
  "version": "0.0.1",
  "main": "index.js",
  "imports": {
    "#shared/*": "./dist/core/shared/*.js",
    "#user/*": "./dist/core/user/*.js"
  },
  "scripts": {
    "dev": "ts-node-dev --no-notify --respawn --transpile-only src/apollo",
    "ts-node": "ts-node",
    "tsc": "tsc",
    "tsc:check": "npm run tsc -- --noEmit",
    "build": "tsc -b ./tsconfig.json",
    "build:w": "tsc -b ./tsconfig.json -w",
    "clean:tsc": "rm tsconfig.tsbuildinfo",
    "test": "jest",
    "test:cov": "npm run test -- --coverage",
    "cti": "cti",
    "cti:make": "sh ./cti.sh"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8",
    "@types/jest": "^28.1.8",
    "@types/node": "^16",
    "jest": "^28.1.3",
    "ts-node": "^10",
    "ts-node-dev": "^2",
    "typescript": "^4"
  },
  "dependencies": {
    "apollo-server": "^3",
    "apollo-server-core": "^3",
    "apollo-server-lambda": "^3",
    "graphql": "^15",
    "graphql-middleware": "^6",
    "graphql-scalars": "^1",
    "graphql-shield": "^7"
  },
  "author": "Uriel Guy <urielsateles@gmail.com>"
}
