{
  "name": "me-mudei-api",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "ts-node-dev --no-notify --respawn --transpile-only src",
    "start": "node dist/index",
    "test": "jest",
    "clean": "rm -rf dist",
    "build": "yarn -s run clean && yarn -s run generate && tsc",
    "deploy": "yarn build && yarn deploy:prisma",
    "deploy:dev": "yarn deploy && yarn start",
    "deploy:prisma": "prisma migrate deploy",
    "generate": "yarn -s run generate:prisma && yarn -s run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/infra/graphql/schema"
  },
  "dependencies": {
    "@prisma/client": "^3.10.0",
    "apollo-server": "^3.6.4",
    "apollo-server-core": "^3.6.4",
    "axios": "^0.26.1",
    "graphql": "^16.3.0",
    "graphql-scalars": "^1.15.0",
    "nexus": "^1.3.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.5",
    "prettier": "2.5.1",
    "prisma": "^3.10.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.2"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "author": "Uriel Guy <urielsateles@gmail.com>"
}
