{
  "name": "me-mudei-api",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "workspaces": [
    "./src/core",
    "./src/apollo"
  ],
  "scripts": {
    "prestart:lambda": "npm run build --workspaces && npm run clean",
    "start:lambda": "npm run build:w -workspaces & npx sls offline --stage local",
    "prestart:apollo": "npm run build --workspaces && npm run clean",
    "start:apollo": "npm run build:w --workspaces & npm run dev -w @me-mudei/apollo",
    "clean": "rm -rf .build",
    "test": "jest",
    "test:cov": "jest --coverage",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces",
    "prepare": "husky install",
    "nexus:generate": "ts-node --transpile-only -e 'import NexusSchema from \"./src/apollo/src/schema.ts\"; NexusSchema.makeSchema()'",
    "prisma:generate": "prisma generate --schema src/core/src/shared/infra/database/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema src/core/src/shared/infra/database/prisma/schema.prisma",
    "prisma:seed": "prisma db seed --preview-feature --schema src/core/src/shared/infra/database/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --preview-feature --schema src/core/src/shared/infra/database/prisma/schema.prisma",
    "prisma:migrate:reset": "prisma migrate reset --schema src/core/src/shared/infra/database/prisma/schema.prisma"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/urieloliveira/MeMudeiBackend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/urieloliveira/MeMudeiBackend/issues"
  },
  "homepage": "https://github.com/urieloliveira/MeMudeiBackend#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "husky": "^8.0.1",
    "serverless": "^3.22.0",
    "serverless-offline": "^11.0.1",
    "serverless-plugin-monorepo": "^0.11.0",
    "serverless-plugin-typescript": "^2.1.2"
  }
}
